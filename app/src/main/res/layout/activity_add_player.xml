<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlayer"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_verde">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/verde_claro_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TA TE TI"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circulo"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/jugador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/verde_claro_border"
                android:hint="Ingrese su nombre"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="ELIJA SU LADO"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/cruzLayout"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/verde_claro_border">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/cruz"
                        android:id="@+id/botonCruz"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/circuloLayout"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/verde_claro_border">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circulo"
                        android:id="@+id/botonCirculo"/>

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/botonJugar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Jugar"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:cornerRadius="20dp" />




        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>